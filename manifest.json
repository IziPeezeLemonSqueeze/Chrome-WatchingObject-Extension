{
	"name": "Watching Object!",
	"description": "Aspetto per te l'aggiornamento dei record!",
	"version": "1.6.0",
	"manifest_version": 3,
	"permissions": [
		"notifications",
		"storage",
        "activeTab",
        "cookies",
        "tabs",
		"contextMenus"
	],
    "host_permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*"
    ],
	"background": {
	  	"service_worker": "/SERVICE_WORKERS/background.js",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"dock.html",
				"CODE_SNIPPET/snippet.html",
				"CODE_SNIPPET/snippet.css",
				"SHOW_ALL_DATA/show_all_data.css",
				"it_en.json"
			],
			"matches":  [
				"https://*.force.com/*",
				"https://*.salesforce.com/*"
			]
		}
	],
	"content_scripts": [
      {
		"run_at": "document_end",
        "matches": [
			"https://*.force.com/*",
        	"https://*.salesforce.com/*"
		],
        "js": [
			"content_script.js",
		 	"CODE_SNIPPET/cs_snippet.js",
		 	"SHOW_ALL_DATA/cs_showalldata.js"
		],
		"css": ["CODE_SNIPPET/snippet.css"],
		"all_frames": true
      }
    ],
	"action": {
	  "default_icon": {
		"48": "images/icon.png",
		"128": "images/icon.png"
	  },
	  "default_title": "Object Watching List!",
      "default_popup": "popup.html"
	},
	"icons": {
		"48": "images/icon.png",
		"128": "images/icon.png"
	}
}