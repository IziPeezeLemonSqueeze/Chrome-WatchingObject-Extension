{
	"name": "Salesforce Enhancer",
	"description": "Developer tool for Salesforce, designed to help and speed up what the developer has to do!",
	"version": "1.6.1",
	"manifest_version": 3,
	"permissions": [
		"notifications",
		"storage",
        "activeTab",
        "cookies",
        "tabs",
		"contextMenus"
	],
    "host_permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*"
    ],
	"background": {
	  "service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"dock.html",
				"snippet.html",
				"snippet.css"
			],
			"matches":  [
				"https://*.force.com/*",
				"https://*.salesforce.com/*"
			]
		}
	],
	"content_scripts": [
      {
		"run_at": "document_end",
        "matches": [
			"https://*.force.com/*",
        	"https://*.salesforce.com/*"
		],
        "js": ["content_script.js"],
		"css": ["snippet.css"],
		"all_frames": true
      }
    ],
	"action": {
	  "default_icon": {
		"48": "images/icon.png",
		"128": "images/icon.png"
	  },
	  "default_title": "Salesforce Enhancer",
      "default_popup": "popup.html"
	},
	"icons": {
		"48": "images/icon.png",
		"128": "images/icon.png"
	}
}